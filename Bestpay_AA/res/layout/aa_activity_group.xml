<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/aa_bestpay_topbar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="AA收款"
            android:textColor="@color/color_mw_top"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 动态显示界面 -->

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="#F5F6F7"
        android:orientation="horizontal" 
        android:gravity="center"/>

    <!-- 底部功能菜单栏 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@drawable/aa_main">

        <LinearLayout
            android:id="@+id/linear_aa_gather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center" 
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/text_aa_gather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要收" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center" 
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_gathering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_addbtn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_aa_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center" 
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/text_aa_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要付" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>